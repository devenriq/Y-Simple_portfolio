---
import Section from "@/components/Section.astro";

import { skills } from "@/cv";
---

<Section title="Skills">
  {
    skills.map(({ name, keywords }) => {
      return (
        <section>
          <h3>{name}</h3>
          <ul>
            {keywords.map((keyword) => (
              <p>{keyword}</p>
            ))}
          </ul>
        </section>
      );
    })
  }
</Section>

<style>
  section {
    margin: 1rem 0;
  }

  section ul {
    display: flex;
    flex-direction: row;
  }

  h3 {
    margin-bottom: 0.5rem;
  }
  ul p {
    padding: 2px 10px;
    margin-right: 8px;
    background: #eee;
    border-radius: 5px;
  }

  ul p:hover {
    background: #ddd;
    transition: all 0.3s ease;
  }
</style>
