---
import Section from "@/components/Section.astro";

import { skills } from "@/cv";
---

<Section title="Habilidades">
  {
    skills.map(({ name, keywords }) => {
      return (
        <section>
          <h3>{name}</h3>
          <ul>
            {keywords.map((keyword) => (
              <li>{keyword}</li>
            ))}
          </ul>
        </section>
      );
    })
  }
</Section>

<style>
  section {
    margin: 1rem 0;
  }
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  h3 {
    margin-bottom: 0.5rem;
  }
  ul li {
    padding: 2px 10px;
    margin-right: 8px;
    background: #eee;
    border-radius: 6px;
  }
  ul li:hover {
    background: #ddd;
    transition: all 0.3s ease;
  }
</style>
